@model MVCBlog.Web.Models.CommentViewModel


@using (Html.BeginForm("CommentInfo", "Comment"))
{
    @Html.AntiForgeryToken()

    <h1 class="page-title">回复</h1>


    <form action="#" method="post" class="contact-form">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <input type="hidden" name="PostID" placeholder="PostID" value="@Model.PostID" />
                <input type="text" name="UserName" placeholder="UserName" value="@Model.UserName" required style="width:100%">
                <input type="email" name="UserEmail" placeholder="UserEmail" value="@Model.UserEmail" required style="width:100%">
                <input type="text" name="CommentTitle" placeholder="CommentTitle" required style="width:100%">
                <textarea name="CommentContent" rows="7" placeholder="CommentContent" required style="width:100%"></textarea>

                <input type="submit" class="btn-send btn-5 btn-5b ion-ios-paperplane" />
            </div>
        </div>	<!-- row -->
    </form>



}
