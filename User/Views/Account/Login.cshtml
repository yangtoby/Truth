@model User.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl"/>
    <div class="form-group">
        <label>用户名</label>
        @Html.TextBoxFor(x=>x.Name, new { @class="form-control", placeholder="Admin"})
    </div>
    <div class="form-group">
        <label>Password</label>
        @Html.PasswordFor(x=>x.Password, new { @class="form-control", placeholder="Password2015"})
    </div>
    <button class="btn btn-primary" type="submit">Login</button>
}

